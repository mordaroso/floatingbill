!!!
%html{:xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', :lang => 'en'}
  %head
    %meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
    %meta{'http-equiv' => 'content-language', :content => 'en'}
    %meta{:id => 'viewport', :name => 'viewport', :content => 'width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;'}
    %title The Floating Bill
    = stylesheet_link_tag 'overall', 'iphone', 'iui/iui'
    - if logged_in?
      = auto_discovery_link_tag(:rss, rss_url(current_user))
  %body
    = javascript_include_tag :defaults, 'iui/iui'
    .toolbar
      %h1#pageTitle The Floating Bill
      %a#homeButton.button{:href=> root_url, :target => '_self'}
        Home

    = yield
